script BravefortTown_TwoSeaTower_3F_EventScript_InMyRoom {
    lock
    applymovement(1, moves(face_player))
    waitmovement(1)
    msgbox(format("I think there's someone in my room...\p
    I will not stand for this!"))
    applymovement(1, moves(face_original_direction))
    waitmovement(1)
    closemessage
    release
}