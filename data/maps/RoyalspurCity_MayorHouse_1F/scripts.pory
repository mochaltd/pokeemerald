script RoyalspurCity_MayorHouse_1F_EventScript_Husband {
    lock
    applymovement(1, moves(face_player))
    waitmovement(1)
    msgbox(format("Oh, are you looking for my wife? She's working upstairs."))
    applymovement(1, moves(face_original_direction))
    waitmovement(1)
    closemessage
    release
}

